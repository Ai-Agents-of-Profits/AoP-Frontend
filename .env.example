# Web3 Configuration
NEXT_PUBLIC_TRADING_VAULT_ADDRESS=0x...  # Your deployed vault contract address
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=    # Get from https://cloud.walletconnect.com/
NEXT_PUBLIC_NETWORK_ID=1                  # 1 for mainnet, 11155111 for Sepolia testnet
NEXT_PUBLIC_RPC_URL=                      # Your Infura/Alchemy RPC URL

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001      # Backend API URL
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001  # WebSocket URL for real-time updates

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNET=true               # Enable testnet features
NEXT_PUBLIC_ENABLE_MOCK_DATA=true             # Use mock data for development
